<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/app_view_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/net_error"/>

    <TextView
        android:id="@+id/app_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:textSize="@dimen/font_size_medium"
        android:layout_below="@id/app_view_iv"
        android:layout_marginTop="@dimen/y50"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:text="刷新"
        android:id="@+id/app_action_empty_btn"
        android:layout_marginLeft="@dimen/x161"
        android:layout_marginRight="@dimen/x161"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textSize_30"
        android:textColor="@color/white"
        android:background="@drawable/exam_selector_startexam"
        android:layout_below="@id/app_message_tv"
        />


</RelativeLayout>
